{
  "name": "chimarena-server",
  "version": "1.0.0",
  "description": "ChimArena Game Server with Colyseus",
  "main": "build/server.js",
  "type": "module",
  "scripts": {
    "start": "node build/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "npm run clean && tsc && cp -r src/assets build/assets",
    "clean": "rimraf build"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "colyseus": "0.16.0",
    "@colyseus/monitor": "0.16.0",
    "@colyseus/playground": "0.16.0",
    "@colyseus/tools": "0.16.0",
    "express": "^4.18.2",
    "dotenv": "^16.5.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "rimraf": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "author": "ChimArena Team",
  "license": "MIT"
}
