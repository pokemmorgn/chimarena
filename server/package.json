{
  "name": "chimarena-server",
  "version": "0.1.0",
  "description": "ChimArena Game Server - Backend built with Express and Colyseus",
  "main": "build/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && cp -r src/assets build/assets",
    "clean": "rimraf build",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "test": "mocha -r ts-node/register test/**/*.ts --timeout 15000"
  },
  "author": "ChimArena Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "compression": "^1.7.4",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "mongoose": "^8.15.2",
    "mongodb": "^6.17.0",
    "colyseus": "^0.16.0",
    "@colyseus/monitor": "^0.16.0",
    "@colyseus/playground": "^0.16.0",
    "@colyseus/tools": "^0.16.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/morgan": "^1.9.4",
    "@types/compression": "^1.7.2",
    "@types/validator": "^13.7.10",
    "@types/node": "^20.5.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5",
    "eslint": "^8.55.0"
  }
}
